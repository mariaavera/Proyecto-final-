                <Font name="System Bold" size="54.0" />
            </font>
        </Label>
        <Button fx:id="btnCanjear" layoutX="196.0" layoutY="291.0"
                mnemonicParsing="false" text="Canjear">
            <font>
                <Font size="19.0" />
            </font>
        </Button>
        <Label layoutX="93.0" layoutY="99.0"
               prefHeight="28.0" prefWidth="163.0"
               text="Puntos actuales:">
