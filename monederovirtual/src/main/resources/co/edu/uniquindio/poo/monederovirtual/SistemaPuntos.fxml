               prefHeight="25.0" prefWidth="103.0" />

        <Label layoutX="123.0" layoutY="189.0"
               prefHeight="26.0" prefWidth="246.0"
               text="¿Cuántos puntos desea canjear?"
               textFill="#0b5079">
